@model List<ApplicationUser>
@{
    ViewData["Title"] = "Users";
}
<div style="padding:10px">
    <div class="text-center">
        <h1 class="display-4">Users Page</h1>
    </div>
    <a asp-action="Registe" class="btn btn-primary">Add User</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>FirstName</td>
                <td>LastName</td>
                <td>Age</td>
                <td>UserName</td>
                <td>Image</td>
                <td>Role</td>
                <td>Email</td>
                <td> </td>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@item.UserName</td>
                <td><img src="~/images/@item.ImageURL"  style="width:30px"/></td>
                <td></td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-Id="@item.Id"
                       class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-controller="user" asp-route-Id="@item.Id" class="btn btn-danger"
                       onclick="return confirm('Are you sure to delete this item..?')">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
