@model Product 
@{
    ViewData["Title"] = "Add Product";
}

<h1>Add product</h1>
<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ImageURl"></label>
        <input asp-for="ImageURl" class="form-control" />
        <span asp-validation-for="ImageURl" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Category_Id"></label>
        <select asp-for="Category_Id" asp-items="ViewBag.listCategory" class="form-control">
        </select>
        <span asp-validation-for="Category_Id" class="text-danger"></span>
    </div>
    <input type="submit" value="Add" class="btn btn-success" />
</form>
@section Scripts{
    <script src="~/lip/jqyery/dist/jquery.min.js"></script>
    <script src="~/lip/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lip/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

